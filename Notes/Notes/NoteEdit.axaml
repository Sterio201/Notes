<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Notes.NoteEdit"
        Title="NoteEdit">

	<Grid RowDefinitions="*, Auto">
		<TextBox Grid.Row="0" x:Name="TextNote" Margin="30" AcceptsReturn="True" Background="AliceBlue"/>

		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
			<Button x:Name="SaveButton" Content="Сохранить" Margin="10" />
			<Button x:Name="CloseButton" Content="Закрыть" />
		</StackPanel>
	</Grid>
	
</Window>
